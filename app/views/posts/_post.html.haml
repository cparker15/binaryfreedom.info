.out_shadow
 .cssbox
  .cssbox_head
   %b= link_to post.title, post
  .cssbox_body
   .alingleft
    = image_tag post.author.gravatar_url
   %p.post_body= post.body_html.html_safe
   %span.author
    by
    = post.author.name
    %span.published_on
    on
    = post.created_at.strftime("%b %d, %Y")
    = button_to "Show", post, :method => :get
   - if ( user_signed_in? && current_user.id == post.author.id )
    .menu_post
     = csrf_meta_tag
     = button_to "Delete", { :action => :destroy, :id => post.id }, :confirm => "Are you sure?", :method => :delete
     = button_to "Edit", { :action => :edit, :id => post.id },  :method => :get
   .addthis_toolbox.addthis_default_style{"addthis:title" => "#{post.title}", "addthis:url" => "http://binaryfreedom.info/posts/#{post.id}"}
    %a.addthis_button_facebook
    %a.addthis_button_digg
    %a.addthis_button_twitter
    %a.addthis_button_email
    %a.addthis_button_identica
    %a.addthis_button_compact
