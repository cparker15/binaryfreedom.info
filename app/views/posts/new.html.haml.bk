.formbox
 .cssbox
  .cssbox_head
   %b create new entry:
   .cssbox_body
    = form_for @post, :url => { :action => "create" }  do |form|
     %div
      = form.label :title
      = form.text_field :title
     %div
      = form.label :body
      = form.text_area :body
     %div
      = form.label :author_id
      = form.select :author_id, User.all.map {|u| [u.name, u.id]}

     %div= submit_tag "Save Post"
